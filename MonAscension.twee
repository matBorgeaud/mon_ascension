               try { window.alert('Sauvegardes non disponibles dans ce format. Confirmez le format cible (SugarCube vs Harlowe).'); } catch (_e3) {}
           }
           break;

       case 'restart':
           hmClose();
           if (window.SugarCube && SugarCube.Engine && typeof SugarCube.Engine.restart === 'function') {
